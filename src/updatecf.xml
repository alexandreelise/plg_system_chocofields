<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_UPDATECF</name>
	<author>ConseilGouz</author>
	<creationDate>2020 June</creationDate>
	<copyright>(C)2020 ConseilGouz. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>pascal.leconte@conseilgouz.com</authorEmail>
	<authorUrl>www.conseilgouz.com</authorUrl>
	<version>2.0.0</version>
	<description>PLG_SYSTEM_UPDATECF_XML_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<media folder="media" destination="plg_system_updatecf">
		<folder>css</folder>
		<folder>js</folder>
		<folder>images</folder>
	</media>
	<files>
		<filename plugin="updatecf">updatecf.php</filename>
		<filename>updatecf.xml</filename>
		<folder>cli</folder>
		<folder>libraries</folder>
		<folder>language</folder>
		<folder>media</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="base_url"
					   type="url"
					   label="PLG_SYSTEM_UPDATECF_BASE_URL_TO_FETCH_LABEL"
					   description="PLG_SYSTEM_UPDATECF_BASE_URL_TO_FETCH_DESCRIPTION"
					   default="https://social.brussels/rest/organisation/"
					   size="255"
					   maxlength="255"
					   filter="url"
					   validate="url"
					   scheme="https"
					   hint="https://example.com/rest"
				/>

				<field
						name="default_resource_id"
						type="text"
						label="PLG_SYSTEM_UPDATECF_DEFAULT_RESOURCE_ID_LABEL"
						description="PLG_SYSTEM_UPDATECF_DEFAULT_RESOURCE_ID_DESCRIPTION"
						size="255"
						maxlength="255"
						filter="alnum"
						default="13219"
				/>
				<field
						name="categories"
						type="category"
						multiple="true"
						extension="com_content"
						label="PLG_SYSTEM_UPDATECF_CATEGORIES_LABEL"
						description="PLG_SYSTEM_UPDATECF_CATEGORIES_DESCRIPTION"
				/>

				<field name="field_context"
					   type="text"
					   label="PLG_SYSTEM_UPDATECF_FIELD_CONTEXT_LABEL"
					   description="PLG_SYSTEM_UPDATECF_FIELD_CONTEXT_LABEL"
					   default="com_content.article"
					   hint="com_content.article"
					   filter="cmd"
				/>

				<field name="log" type="radio"
					   default="0"
					   label="PLG_SYSTEM_UPDATECF_ACTION_LOG_LABEL"
					   description="PLG_SYSTEM_UPDATECF_ACTION_LOG_DESCRIPTION"
					   class="btn-group btn-group-yesno"
					   filter="uint"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
